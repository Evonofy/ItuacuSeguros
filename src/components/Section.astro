---
export interface Props {
  className?: string
  background?: string
  container?: string
  id?: string
}

const { background, className, container, id } = Astro.props
---

<section
  {id}
  class={`w-full ${background ?? "bg-slate-100"} px-6 py-12 ${container || ""}`}
>
  <div
    class={`${
      className ?? ""
    } m-auto flex max-w-5xl flex-col items-center gap-6 md:p-6`}
  >
    <slot />
  </div>
</section>
