    <Link href="#autoatendimento" rounded="full">Procurar Seguro Ideal</Link>

    <a
      href="#seguros"
      class="font-bold text-slate-500 transition-colors hover:text-slate-400 lg:text-xl"
    >
      Pesquisar todos os seguros
    </a>
  </Section>

  <Section
    id="autoatendimento"
    background="!bg-slate-50"
