            <SelectCard
              value="low"
              icon={Dollar}
              label="R$ 500 - R$ 1000"
              name="value"
              checked
            />
          </li>

          <li class="w-full">
            <SelectCard
              value="mid"
              icon={[Dollar, Dollar]}
              label="R$ 1000 - R$ 1500"
              name="value"
